<div class="mt-3">

<h4 class="border-bottom my-5 py-3">SIGMAP 2018<small> -  Password reset</small></h4>

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div>
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        {% endif %}
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input class="form-control" text" id="username" name="username" required="required" />
                </div>
            </div>
        </div>
    <div>
        <input class="btn btn-primary" type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
</div>
